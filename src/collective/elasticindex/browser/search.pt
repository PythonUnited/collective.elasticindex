<html metal:use-macro="context/main_template/macros/master">

  <head>
    <metal:block fill-slot="javascript_head_slot">
      <script type="text/javascript"
              tal:attributes="src string:${portal_url}/++resource++search.js">
      </script>
    </metal:block>
    <metal:block fill-slot="style_slot">
      <link rel="stylesheet" type="text/css" media="screen"
            tal:attributes="href string:${portal_url}/++resource++search.css" />
    </metal:block>
  </head>

  <body>
    <div metal:fill-slot="body">
      <div class="es-search-form"
           tal:attributes="data-server-urls view/server_urls;
                           data-index-name view/index_name">
        <input type="text" placeholder="Search ..." class="searchPage" />
        <ul class="es-search-results">
        </ul>
      </div>
    </div>
  </body>
</html>
